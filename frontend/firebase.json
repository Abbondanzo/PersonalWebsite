{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "/mail",
            "function": "mail"
        }, {
            "source": "**",
            "destination": "/index.html"
        }]
    }
}
